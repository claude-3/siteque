{
    "manifest_version": 3,
    "name": "SiteCue",
    "version": "1.0.0",
    "action": {
        "default_title": "Open SiteCue"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "permissions": [
        "sidePanel",
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://sitecue-api.aledside.workers.dev/*",
        "http://localhost:8787/*",
        "http://127.0.0.1:54321/*"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"
            }
        }
    }
}