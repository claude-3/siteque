{
    "manifest_version": 3,
    "name": "SiteCue",
    "version": "1.0.0",
    "action": {
        "default_title": "Open SiteCue"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "permissions": [
        "sidePanel",
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://sitecue-api.aledside.workers.dev/*"
    ]
}